@model M_N_update.Models.Lesson

@{
   ViewData["Title"] = "Details";
   string selecionado = "";
}

<h1>Details</h1>

<div>
   <h4>Lesson</h4>
   <hr />
   <dl class="row">
      <dt class="col-sm-2">
         @Html.DisplayNameFor(model => model.Nome)
      </dt>
      <dd class="col-sm-10">
         @Html.DisplayFor(model => model.Nome)
      </dd>
      <dt class="col-sm-2">
         @Html.DisplayNameFor(model => model.Description)
      </dt>
      <dd class="col-sm-10">
         @Html.DisplayFor(model => model.Description)
      </dd>

      <dt class="col-sm-2">
         <label class="control-label">Categorias</label>
      </dt>
      <dd>
         @* listar as categorias, e confrontar essa lista com as categorias a que a lição está associada *@
         @foreach (Category item in ViewBag.ListaDeCategorias) {
            if (Model.CategoriesList.Contains(item)) { selecionado = "checked"; }

            <br /> <input type="checkbox" value="@item.ID" name="CategoriaEscolhida" @selecionado /> @item.Nome

            selecionado = "";
         }
      </dd>
   </dl>
</div>
<div>
   <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
   <a asp-action="Index">Back to List</a>
</div>
